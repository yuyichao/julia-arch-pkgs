pkgname=julia-mbedtls_jll-git
pkgver=2.16.0+2
pkgrel=2
pkgdesc="MbedTLS_jll.jl"
url="https://github.com/JuliaBinaryWrappers/MbedTLS_jll.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia mbedtls)
provides=('julia-mbedtls_jll')
source=(git://github.com/JuliaBinaryWrappers/MbedTLS_jll.jl
        jll.toml)
md5sums=('SKIP'
         '25f44b754e0002faec77e0aa01308431')

pkgver() {
  cd MbedTLS_jll.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd MbedTLS_jll.jl

  julia /usr/lib/julia/julia-gen-jll.jl MbedTLS_jll ../jll.toml .
}

package() {
  cd MbedTLS_jll.jl

  . /usr/lib/julia/julia-install-pkg.sh MbedTLS_jll "${pkgdir}" "${pkgname}"
}
